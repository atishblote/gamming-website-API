<%- include("../layouts/adminHeader") %>

<!-- Main Sidebar Container -->
<%- include("../layouts/adminAside") %>

<style>
  .fancy_table span.vs {
    display: flex;
    width: 30px;
    background: #dbebed;
    height: 32px;
    padding: 4px 7px;
    border-radius: 50px;
    margin-top: 11px;
    margin-left: 5px;
    margin-right: 8px;
}
.fancy_table .d-flex{
  justify-content: space-around;
}
.status_btn {
    border-radius: 50px;
    padding: 5px;
    width: 83px;
    display: inline-block;
    text-align: center;
    color: white;
    text-transform: capitalize;
}
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">All Customer</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <a style="visibility: hidden;" class="mr-5" href="/add-customers"><button class="btn btn-primary">Add New <i class="fas fa-plus"></i></button></a>
              <li class="breadcrumb-item"><a href="dashboards">Home</a></li>
              <li class="breadcrumb-item active">All Customer</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <% if (code !==undefined) { %>
          <% if (code===1) { %>
            <div class="alert alert-success" role="alert">
              <%= message %>
            </div>
            <% } else { %>
              <div class="alert alert-danger" role="alert">
                <%= message %>
              </div>
              <% } %>
                <% } %>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="card">
                        <div class="card-header">
                          <h3 class="card-title">Customer Details</h3>

                          <div class="card-tools">
                            <ul class="pagination pagination-sm float-right">
                              <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                              <li class="page-item"><a class="page-link" href="#">1</a></li>
                              <li class="page-item"><a class="page-link" href="#">2</a></li>
                              <li class="page-item"><a class="page-link" href="#">3</a></li>
                              <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            </ul>
                          </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                          <table class="table fancy_table">
                            <thead>
                                
                                <tr>
                                    <th style="width: 10px">#</th>

                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Number</th>
                                    <th>Visible</th>
                                    <th style="width: 80px">Label</th>
                                </tr>
                            </thead>
                          <% if(data !== undefined){%>
                            <!-- <%-  typeof(data.fantacy) %> -->
                              <!-- <%-  typeof(data.fantacy) %> -->
                              <% data.forEach(function(items) { %>
                                <tr>
                                  <td><input type="checkbox" ></td>
                                 <td><%= items.username %></td>
                                 <td><%= items.email %></td>
                                 <td> <%= items.first_name %> <%= items.last_name %></td>
                                 <td><%= items.number %></td>
                                  <% if(items.is_active == 'true'){%>
                                      <td> <span class="status_btn" style="background-color: rgb(0, 185, 0);">Active</span></td>
                                  <% }else{ %>
                                      <td> <span class="status_btn" style="background-color: rgb(196, 196, 196);">In-active</span></td>
                                  <% } %>
                                  <td class="text-right py-0 align-middle" style="width: 80px">
                                    <div class="btn-group btn-group-sm">
                                        <button data-editid="all-customers/<%= items._id %>" class="btn btn-info"><i class="fas fa-edit"></i></button>
                                        <button data-delid="all-customers/<%= items._id %>" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                                      </div>
                                </td>
                              </tr>
                              <% }); %>
                            <% }else{ %>
                            <p style="text-align: center;">No entries here</p>
                          <% } %>

                          </table>
                        </div>
                        <!-- /.card-body -->
                      </div>

                      <!-- /.card -->
                    </div>
                  </div>
                  <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include("../layouts/adminFooter") %>
