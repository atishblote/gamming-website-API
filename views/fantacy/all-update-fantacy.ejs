<%- include("../layouts/adminHeader") %>

  <!-- Main Sidebar Container -->
<%- include("../layouts/adminAside") %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Add Fantacy</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="dashboards">Home</a></li>
                <li class="breadcrumb-item active">Add Fantacy</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <!-- left column -->
            <div class="col-md-8">
              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Fantacy Details</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form  method="post">
                      <div class="row pl-4 pr-4">
                        <div class="col-sm-6">
                          <!-- text input -->
                          <div class="form-group">
                            <label>Match Name</label>
                            <input type="text" name="name" class="form-control" required placeholder="Eg. IND vs SL - ICC Cricket World Cup, 2023" value="<%= data.name %>" required>
                          </div>
                        </div>
                        <div class="col-sm-6">
                          <div class="form-group">
                            <label>Banner Link</label>
                            <input type="text" name="banner_image"  class="form-control" required placeholder="Eg. https://image.png" value="<%= data.banner_image %>" required>
                          </div>
                        </div>
                      </div>

                      <div class="row pl-4 pr-4">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Team one</label>
                                <select class="form-control select2" name="team_one" style="width: 100%;" required>
                                    <option value="<%= data.team_one._id %>"><%= data.team_one.team_name %></option>
                                  <% if(data4 !== undefined){ %>
                                    <% data4.forEach(function(teams) { %>
                                      <option value="<%= teams._id %>"> <%= teams.team_name %> ( <%= teams.country_code %> )</option>
                                    <% }) %>
                                  <% } %>
                                </select>
                              </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Team Two</label>
                                <select class="form-control select2" name="team_two" style="width: 100%;" required>
                                    <option value="<%= data.team_two._id %>"><%= data.team_two.team_name %></option>
                                  <% if(data4 !== undefined){ %>
                                    <% data4.forEach(function(teams) { %>
                                      <option value="<%= teams._id %>"> <%= teams.team_name %> ( <%= teams.country_code %> )</option>
                                    <% }) %>
                                  <% } %>
                                </select>
                              </div>
                        </div>

                      </div>

                      <div class="row pl-4 pr-4">
                        <div class="col-sm-6">
                          <!-- text input -->
                          <div class="form-group">
                            <label>Match Date/Time</label>
                            <input type="datetime-local" name="date_time" class="form-control" value="<%= data.time_stam %>" required>
                          </div>
                        </div>

                        <div class="col-sm-6">
                          <!-- text input -->
                          <div class="form-group">
                            <label>Match Destination</label>
                            <input type="text" name="venues" class="form-control" placeholder="Eg.Nagendra Modi St, Gujrat India" value="<%= data.venues %>" required> 
                          </div>
                          

                        </div>

                      </div>

                      <div class="row pl-4 pr-4">

                        <div class="col-sm-6">
                          <!-- text input -->
                          <div class="form-group">
                            <label>Rapid Api match ID</label>
                            <input type="number" name="rapid_match_id" class="form-control" placeholder="Eg. 154545212452121" value="<%= data.rapid_match_id %>"  required> 
                          </div>
                          <!-- text input -->
                          <div class="form-group">
                            <label>Visible</label>
                            <select name="is_active" class="form-control" required>
                              <% if(data.is_active == true){ %>
                                <option value="true" selected>Publish</option>
                                <option value="false">Draft</option>
                              <% }else{ %>
                                <option value="false" selected>Draft</option>
                              <option value="true">Publish</option>
                              <% } %>
                              
                            </select>
                          </div>
                        </div>

                        <div class="col-sm-6">
                          <!-- text input -->
                          <div class="form-group">
                            <label>Multiple Package</label>
                            <%= data.attached_package.length %>
                            <%= data2.length %>
                            <select class="form-control select2" name="attached_package" style="width: 100%;" multiple required>
                                <option value="">Select Package</option>
                                <% if (data2 !== undefined) { %>
                                    <% data.attached_package.forEach(function(p1) { %>
                                        <option value="<%= p1._id %>"  selected><%= p1.name %></option>
                                    <% }); %>
                                    <% data2.forEach(function(package) { %>
                                      <option value="<%= package._id %>" ><%= package.name %></option>
                                    <% }); %>
                                  
                                <% } %>
                              </select>
                              
                          </div>
                        </div>

                      </div>
                     
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Toggle Data</h3>
                    </div>

                    <div class="card-body p-1">
                      <table class="table">
                       
                        <tbody>
                          <!-- fantacy team ID -->
                          <tr data-widget="expandable-table" aria-expanded="false">
                            <td>
                              <button type="button" class="btn btn-primary p-0">
                                <i class="expandable-table-caret fas fa-caret-right fa-fw"></i>
                              </button>
                              Match ID
                            </td>
                          </tr>
                          <tr class="expandable-body">
                            <td>
                              <div class="p-0" style="max-height: 350px; overflow-y: scroll;">
                                <div class="card-body" style="padding: 0; padding-top: 5px;">
                                  <ul class="nav nav-tabs" id="custom-content-below-tab" role="tablist">
                                    <li class="nav-item">
                                      <a class="nav-link active" id="custom-content-below-home-tab" data-toggle="pill" href="#custom-content-below-home" role="tab" aria-controls="custom-content-below-home" aria-selected="true">International</a>
                                    </li>
                                    <li class="nav-item">
                                      <a class="nav-link" id="custom-content-below-profile-tab" data-toggle="pill" href="#custom-content-below-profile" role="tab" aria-controls="custom-content-below-profile" aria-selected="false">League</a>
                                    </li>
                                    <li class="nav-item">
                                      <a class="nav-link" id="custom-content-below-messages-tab" data-toggle="pill" href="#custom-content-below-messages" role="tab" aria-controls="custom-content-below-messages" aria-selected="false">Domestic</a>
                                    </li>
                                    
                                  </ul>
                                  <div class="tab-content" id="custom-content-below-tabContent">
                                    <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
                                      <table class="table table-hover">
                                        <tbody>
                                          <% if (data3 !== undefined) { %>
                                            <% data3.forEach(function (teams) { %>
                                              <% if (teams.scheduleAdWrapper && teams.scheduleAdWrapper.matchScheduleList) { %>
                                                <% teams.scheduleAdWrapper.matchScheduleList.forEach(function (match) { %>
                                                 
                                                  <tr style="background-color: rgba(0,0,0,.075);">
                                                    <td colspan="2"> <%= match.seriesName %></td>
                                                  </tr>
                                                  <% if (match.matchInfo && match.matchInfo.length > 0) { %>
