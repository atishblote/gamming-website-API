                                                      <% if (info.matchId !== undefined) { %>
                                                        
                                                        <tr>
                                                          <td> <%= info.matchDesc %></td>
                                                          <td> <%= info.matchId %></td>
                                                          <td><button data-link="<%=  info.matchId %>" class="btn btn-info btn-outline button_cusom_icon"><i class="fas fa-copy"></i></button></td>
                                                        </tr>
                                                      <% } %>
                                                    <% }); %>
                                                  <% } %>
                                                <% }); %>
                                              <% } %>
                                            <% }); %>
                                          <% } %>
                                          
                                      </tbody>
                                    </table>
                                      
                                    </div>
                                    <div class="tab-pane fade" id="custom-content-below-profile" role="tabpanel" aria-labelledby="custom-content-below-profile-tab">
